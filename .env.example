# Variáveis de ambiente para conexão MongoDB remota
# Copie este arquivo para .env e configure os valores

# === CONFIGURAÇÃO DO SERVIDOR MONGODB ===
MONGO_HOST=192.168.22.111
MONGO_PORT=27017
MONGO_DATABASE=dataops_challenge

# === AUTENTICAÇÃO ===
MONGO_USERNAME=dataops_user
MONGO_PASSWORD=dataops_password
MONGO_AUTH_SOURCE=dataops_challenge

# === SSL/TLS (opcional) ===
MONGO_TLS=false
MONGO_TLS_ALLOW_INVALID_CERTS=false

# === TIMEOUTS (opcional) ===
MONGO_CONNECTION_TIMEOUT=10000
MONGO_SERVER_SELECTION_TIMEOUT=10000

# === CONFIGURAÇÕES DE DEBUG ===
DEBUG=false
VERBOSE_LOGGING=false
